distribute: Makefile.src doc/Makefile.src
	@(minv=`grep minor_version version.c | sed -e 's/.* = "\([0-9]*\)";/\1/'` ; \
	  majv=`grep major_version version.c | sed -e 's/.* = "\([0-9]*\)";/\1/'` ; \
	  patchv=`grep patchlevel version.c | sed -e 's/.* = "\([0-9]*\)";/\1/'` ; \
	  stat=`grep status version.c | sed -e 's/.* = "\(.*\)";/\1/'` ; \
	  echo "Update the HISTORY and the NEWS files for the version OPRS_$$majv-$$minv-$$patchv-$$stat oprs" ; \
	  emacs HISTORY NEWS; \
	  echo "Now commiting the files with: cvs ci -m \"Checking in distribution OPRS $$majv.$$minv.$$patchv $$stat\"" ; \
	  cvs ci -m "Checking in distribution OPRS $$majv.$$minv.$$patchv.$$stat" ; \
	  echo "Now taging this version with: cvs tag OPRS_$$majv-$$minv-$$patchv-$$stat" ; \
	  cvs tag OPRS_$$majv-$$minv-$$patchv-$$stat)

tag: 
	@(minv=`grep minor_version version.c | sed -e 's/.* = "\([0-9]*\)";/\1/'` ; \
	  majv=`grep major_version version.c | sed -e 's/.* = "\([0-9]*\)";/\1/'` ; \
	  patchv=`grep patchlevel version.c | sed -e 's/.* = "\([0-9]*\)";/\1/'` ; \
	  stat=`grep status version.c | sed -e 's/.* = "\(.*\)";/\1/'` ; \
	  echo "Now taging this version with: cvs tag OPRS_$$majv-$$minv-$$patchv-$$stat" ; \
	  cvs tag OPRS_$$majv-$$minv-$$patchv-$$stat)


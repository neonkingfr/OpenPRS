#
# the file site.make is a link to a file containing machine/site dependencies.
#

include ../../site.make

top_srcdir=	@top_srcdir@

OPRS_UTIL_DIR = $(top_srcdir)/util

CONTRIB_DATA = bk-point.inc bk-point.opf bk-point.sym dmex-logn.inc dmex-logn.opf dmex-logn.sym \
	dmex.inc dmex.opf dmex.sym quick-sort.inc quick-sort.opf quick-sort.sym


CONTRIB_DATA_TEST = test-dmex-ln-r1.inc test-dmex-ln-r2.inc test-dmex-ln-r3.inc \
	test-dmex-ln-r4.inc test-dmex-ln-r5.inc test-dmex-ln.db test-dmex-ln.inc \
	test-dmex-ln.opf test-dmex-r1.inc test-dmex-r2.inc test-dmex-r3.inc test-dmex-r4.inc \
	test-dmex-r5.inc test-dmex.db test-dmex.inc test-dmex.opf



INSTALL-IF-CHANGE = $(OPRS_UTIL_DIR)/install-if-change.sh


install: 
	@-for i in $(CONTRIB_DATA); do\
		$(INSTALL-IF-CHANGE) -c -m 644 $$i ${DESTDIR}/contrib/data/`basename $$i`;\
	done
	@-for i in $(CONTRIB_DATA_TEST); do\
		$(INSTALL-IF-CHANGE) -c -m 644 test/$$i ${DESTDIR}/contrib/data/test/`basename $$i`;\
	done

.DEFAULT:

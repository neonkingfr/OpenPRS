include ../site.make

srcdir = @srcdir@

VPATH = $(srcdir)

C_TOOLKIT_LIB_OBJ = mallocPack.o slistPack.o shashPack.o

C_TOOLKIT_LIB_SRC = $(C_TOOLKIT_LIB_OBJ:%.o=%.c)

C_TOOLKIT_LIB_INC =  slistPack.h shashPack.h 

C_TOOLKIT_LIB_PUB_INC =  slistPack-pub.h shashPack-pub.h 

C_TOOLKIT_LIB_FINC = slistPack_f.h shashPack_f.h

C_TOOLKIT_LIB = libOPList.a

CPPFLAGS += -I. -I.. -I$(srcdir)/..

all: ${C_TOOLKIT_LIB}

$(C_TOOLKIT_LIB): $(C_TOOLKIT_LIB_OBJ:%=$(C_TOOLKIT_LIB)(%))
	$(RANLIB) $@

(%.o): %.c
	$(CC) $(CFLAGS) $(CPPFLAGS) -c $< -o $*.o
	$(AR) r $@ $*.o
	$(RM) $*.o

slistPackTest: slistPackTest.o $(C_TOOLKIT_LIB)
	$(CC) $(CFLAGS) $(LDFLAGS) -o $@   slistPackTest.o $(C_TOOLKIT_LIB)

shashPackTest: shashPackTest.o $(C_TOOLKIT_LIB)
	$(CC) $(CFLAGS) $(LDFLAGS) -o $@   shashPackTest.o $(C_TOOLKIT_LIB)

clean:
	rm -f  core a.out gmon.out *.o

very-clean: clean
	rm -f $(C_TOOLKIT_LIB) make.depend

depend make.depend: $(C_TOOLKIT_LIB_SRC)
	$(MKDEP) $(CPPFLAGS) \
		 -p$(VPATH) \
		 -omake.depend \
		 -l$(C_TOOLKIT_LIB) $?

#
# This file contains the dependencies generated by makedepend.
#

include make.depend

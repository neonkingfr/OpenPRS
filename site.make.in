# $Id$


# Which compiler to use (gcc is prefered).
CC = @CC@
CFLAGS = @CFLAGS@

YACC = @BISON@
YFLAGS = -d

LEX = @FLEX@
LFLAGS =
LEXLIB = -lfl

MV = mv

LN_S = @LN_S@

PERL = @PERL@

MKDEP 		= @MKDEP@

INSTALL = @abs_top_srcdir@/util/install.sh
INSTALL-IF-CHANGE = @abs_top_srcdir@/util/install-if-change.sh


LD = ld				#Strange... autoconf does not care
RANLIB = @RANLIB@
PURIFY =
OPTIMIZE = -O
DEBUG_FLAG = -g
STATIC =
ANSI = 
WARNINGS = -Wall

MEMLIB_DEB = -DDO_CHECK=0


# Where are the X11 and Motif libs on this machine.

X_LIB = @MOTIF_LIBS@ @X_LIBS@ @X_EXTRA_LIBS@ -lXt -lX11

# and the X include.

X_INCLUDE = @MOTIF_CFLAGS@ @X_CFLAGS@

EXTRA_LIB =

HAS_READLINE = @HAVE_LIBREADLINE@

ifdef HAS_READLINE
EXTRA_LIB += -L/lib -lreadline -lhistory -ltermcap
endif


EXTRA_LIB += -lm

DESTDIR = $(srctop)/..

PRPC_LANG = en

USE_MULTI_THREAD = 1

ifdef USE_MULTI_THREAD
MT_LDFLAGS =
MT_CPPFLAGS =
endif

